@page
@model RecipeRazor.Pages.Recipes.CreateRecipeModel
@{
	ViewData["Title"] = "Create";
}
<style>
     body{
       background-image: linear-gradient(to right top, #490b3d, #671d46, #83304e, #9e4655, #b75e5c, #c27262, #cb856b, #d39976, #d3aa87, #d3ba9b, #d5c8b2, #dad6ca);}
 </style>




 <div class="modal-header">
   <h5 class="modal-title" id="addModalLabel">Add new Recipe</h5>
 </div>
 <form asp-page-handler="add" method="post">
       <div class="modal-body c-edit-modal-body">
            <div class="form-group">
                <label asp-for="@Model.recipe.Title" class="mb-2"></label>
				<div class="col-3">
					<input asp-for="@Model.Title" class="form-control" />
				</div>
				<span asp-validation-for="@Model.recipe.Title" class="text-danger"></span>
            </div>

			<div class="form-group">
                <label asp-for=@Model.recipe.Ingredients class="mb-2"></label>
				<div class="col-5">
					<textarea class="form-control" asp-for=@Model.Ingredients rows="5" placeholder="enter every ingredient on a separate line"></textarea>
				</div>
            </div>

			<div class="form-group">
                <label asp-for=@Model.recipe.Instructions class="mb-2"></label>
				<div class="col-5">
					<textarea class="form-control" asp-for=@Model.Instructions rows="5" placeholder="enter every instruction on a separate line"></textarea>
				</div>
            </div>

			<div class="form-group">
                <label asp-for=@Model.recipe.Categories class="col-form-label col-2 "></label>
				<div class="col-10">
					@foreach (string category in @Model.Categories)
					{
						<input name="SelectedCategories" type="checkbox" value="@category" /> @category
						<br />
					}
				</div>
            </div>
       </div>

       <div class="modal-footer c-modal-footer">
           <a class="btn c-cancel-button" href="./ListRecipe">Cancel</a>
            <button type="submit" class="btn c-confirm-button" asp-page="ListCategory">Confirm</button>
        </div>
 </form>>


