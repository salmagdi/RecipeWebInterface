@page "{category}"
@model RecipeRazor.Pages.Categories.DeleteModel
@{
	ViewData["Title"] = "Delete";
}
<style>
     body{
        background-image: linear-gradient(to right top, #490b3d, #671d46, #83304e, #9e4655, #b75e5c, #c27262, #cb856b, #d39976, #d3aa87, #d3ba9b, #d5c8b2, #dad6ca);
     } 
 </style>
<
      <div class="modal-header c-delete-modal-header"></div>               
<form asp-page-handler="delete" method="post" class="deleteForm">
    <div class="modal-body row justify-content-center pt-0">
         <svg xmlns="http://www.w3.org/2000/svg" width="65" height="70" fill="#490b3d" class="bi bi-trash3-fill c-delete-trash" viewBox="0 0 16 16">
              <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
         </svg>
         <h2 class="ps-5 c-delete-modal-title">Delete?</h2>
           <p class="c-delete-confirmation-text">
               Are you sure you want to delete <b>@Model.DeletedCategory</b> category?
           </p>
   </div>
   <input type="hidden" asp-for="@Model.DeletedCategory" value="@Model.DeletedCategory">
    <div class="modal-footer c-modal-footer container row justify-content-center">
          <a class="btn c-cancel-button" asp-page="List">Cancel</a>
          <button type="submit" class="btn c-delete-button col-3 ms-3" asp-page="ListCategory">Delete</button>
   </div>
 </form>
 

