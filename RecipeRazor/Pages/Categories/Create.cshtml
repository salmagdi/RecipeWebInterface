@page
@model RecipeRazor.Pages.Categories.CreateModel
@{
	ViewData["Title"] = "Create";
}

<h2 class="my-4">Create A New Category</h2>

<form method="post">
	<div class="row my-3">
		<label asp-for="@Model.Category" class="col-form-label col-2"></label>

		<div class="col-3">
			<input asp-for="@Model.Category" class="form-control" />
			<span asp-validation-for="@Model.Category" class="text-danger"></span>
		</div>

	</div>
	<div class="btn-group float-end">
		<input type="submit" value="Create" class="btn btn-primary" />
		<a class="btn btn-secondary" asp-page="Index">Back to List</a>
	</div>


</form>