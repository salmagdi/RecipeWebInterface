@page "{category}"
@model RecipeRazor.Pages.Categories.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h2 class="my-4">Edit A Category</h2>

<form method="post">
	<div class="row my-3">
		<label asp-for="@Model.NewCategory" class="col-2 col-form-label"></label>
		<div class="col-3">
			<input asp-for="@Model.NewCategory" class="form-control" value="@Model.OldCategory"/>
			<span asp-validation-for="@Model.NewCategory" class="text-danger"></span>
		</div>
	</div>
	<div class="btn-group float-end">
		<input type="submit" value="Edit" class="btn btn-primary" />
		<a class="btn btn-secondary" asp-page="Index">Back to List</a>
	</div>
</form>